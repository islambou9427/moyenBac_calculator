                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/next"
                            android:layout_width="30dp"
                            android:layout_height="50dp"/>
                    </LinearLayout>

                </LinearLayout>

